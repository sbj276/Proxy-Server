<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>AuthenticationHandler</servlet-name>
        <servlet-class>com.gafalamaster.action.AuthenticationHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutHandler</servlet-name>
        <servlet-class>com.gafalamaster.action.LogoutHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>URLFilter</servlet-name>
        <servlet-class>com.gafalamaster.action.URLFilter</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationHandler</servlet-name>
        <url-pattern>/AuthenticationHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutHandler</servlet-name>
        <url-pattern>/LogoutHandler</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>URLFilter</servlet-name>
        <url-pattern>/URLFilter</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
